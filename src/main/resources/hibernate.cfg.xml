<?xml version="1.0"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory>
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/mibudget?serverTimezone=UTC</property>
  <property name="hibernate.connection.username">root</property>
  <property name="hibernate.connection.password">rootRoot</property> <!-- rootpassword -->
  <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
  <property name="hibernate.hbm2ddl.auto">update</property>
  <property name="show_sql">false</property>
  <property name="format_sql">true</property>
  <!-- JDBC connection pool settings ... using built-in test pool -->
  <property name="connection.pool_size">200</property>
  <!-- Related to the mapping start -->
  <mapping class="com.miBudget.entities.User" resource="com/miBudget/entities/User.hbm.xml"/>
  <mapping class="com.miBudget.entities.Item" resource="com/miBudget/entities/Item.hbm.xml"/>
  <mapping class="com.miBudget.entities.Account" resource="com/miBudget/entities/Account.hbm.xml"/>
  <mapping class="com.miBudget.entities.UserAccountObject" resource="com/miBudget/entities/UserAccountObject.hbm.xml"/>
  <mapping class="com.miBudget.entities.ItemAccountObject" resource="com/miBudget/entities/ItemAccountObject.hbm.xml"/>
  <mapping class="com.miBudget.entities.UsersInstitutionIdsObject" resource="com/miBudget/entities/UsersInstitutionIdsObject.hbm.xml"/>
  <mapping class="com.miBudget.entities.UserItemsObject" resource="com/miBudget/entities/UsersItemsObject.hbm.xml"/>
  <mapping class="com.miBudget.entities.Rule" resource="com/miBudget/entities/Rule.hbm.xml"/>
  <mapping class="com.miBudget.entities.Category" resource="com/miBudget/entities/Category.hbm.xml"/>
  <!-- Related to the mapping end -->
 </session-factory>
</hibernate-configuration>
