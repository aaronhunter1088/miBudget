	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<testSourceDirectory>src/test/java</testSourceDirectory>
		<resources>
			<resource>
				<directory>src/main/webapp</directory>
				<includes>
					<include>**/**</include>
				</includes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<includes>
					<include>**/*.*</include>
				</includes>
			</resource>
		</resources>

		<plugins>
			<!-- Surefire plugin -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.19.1</version>
				<configuration>
					<testFailureIgnore>true</testFailureIgnore>
				</configuration>
			</plugin>
			<!-- War plugin -->
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<version>3.0.0</version>
			   <configuration>
				   <attachClasses>true</attachClasses>
				   <webXml>${basedir}/src/main/webapp/WEB-INF/web.xml</webXml>
				   <warSourceDirectory>src/main/webapp</warSourceDirectory>
				   <outputDirectory>${outputDirectory}</outputDirectory>
			   </configuration>
			</plugin>
			<!-- Compiler plugin -->
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.8.0</version>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
				</configuration>
			</plugin>
			<!-- Antrun plugin -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>1</id>
						<phase>generate-resources</phase>
						<configuration>
							<files>
								<file>${outputDirectory}/build.properties</file>
							</files>
							<target>
								<echo>BuildTime : ${build.time}</echo>
							</target>
						</configuration>
					</execution>
					<execution>
						<id>2</id>
						<phase>initialize</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<mkdir dir="${project.build.directory}"/>
								<tstamp>
									<format property="last.updated" pattern="yyyy-MM-dd hh:mm:ss a z" timezone="CST"/>
								</tstamp>
								<!--suppress UnresolvedMavenProperty -->
								<echo file="${outputDirectory}/build.properties" message="build.time=${last.updated}"/>
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
